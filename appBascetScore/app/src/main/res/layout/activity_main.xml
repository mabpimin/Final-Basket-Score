<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bagus.mabpimin.appbascetscore.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/garis"
                android:layout_width="1dp"
                android:layout_height="280dp"
                android:background="#000000"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>



            <TextView
                android:id="@+id/team1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_margin="15dp"
                android:layout_toLeftOf="@id/garis"/>

            <TextView
                android:id="@+id/score1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/garis"
                android:layout_below="@id/team1"/>





            <TextView
                android:id="@+id/team2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/garis"/>

            <TextView
                android:id="@+id/score2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/garis"
                android:layout_below="@id/team2"/>




            <Button
                android:id="@+id/button1"
                android:onClick="tigaPoinA"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="+3 POINTS"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="#990000"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/garis"
                android:layout_below="@id/score1"/>

            <Button
                android:id="@+id/button2"
                android:onClick="duaPoinA"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="+2 POINTS"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="#ffcc00"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/garis"
                android:layout_below="@id/button1"/>

            <Button
                android:id="@+id/button3"
                android:onClick="satuPoinA"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="FREE THROW"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="#009966"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/garis"
                android:layout_below="@id/button2"/>








            <Button
                android:id="@+id/button4"
                android:onClick="tigaPoinB"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="+3 POINTS"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="#990000"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/garis"
                android:layout_below="@id/score2"/>

            <Button
                android:id="@+id/button5"
                android:onClick="duaPoinB"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="+2 POINTS"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="#ffcc00"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/garis"
                android:layout_below="@id/button4"/>

            <Button
                android:id="@+id/button6"
                android:onClick="satuPoinB"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="FREE THROW"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="#009966"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/garis"
                android:layout_below="@id/button5"/>








            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks. Dicoba untuk Teks."
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/garis"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS. DICOBA UNTUK TEKS."
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/text1"/>



        </RelativeLayout>
    </ScrollView>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">



        <Button
            android:id="@+id/button7"
            android:onClick="hapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="#990000"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/button8"
            android:onClick="kirimBang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirim"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="#ffcc00"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/telpon"
            android:onClick="telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telepon"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="#009966"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


</LinearLayout>
